            <td>{{this.id}}</td>
						<td>{{this.first_name}}</td>
						<td>{{this.last_name}}</td>
						</td>
						<td>
							<a href="/owners/{{this.id}}">View</a>
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
